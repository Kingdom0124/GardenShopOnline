@{
    ViewBag.Title = "Checkout Complete";
}

<main class="main-content">
    <div class="container">
        <div class="row d-flex justify-content-center my-4">
            <div class="col-lg-12 text-center">
                <h2>Checkout Complete</h2>
                <p>Thanks for your order! Your order number is: <strong>@ViewData["OrderId"]</strong></p>
                <p>
                    How about shopping for some more trees in our @Html.ActionLink("store", "Index", "Home")
                </p>
            </div>
            <div class="col-lg-12">
                <img class="d-block mx-auto w-50" src="~/assets/customer/images/Img/IMG20190224085556.jpg" />
            </div>
        </div>
    </div>
</main>
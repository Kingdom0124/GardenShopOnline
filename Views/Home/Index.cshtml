@{
    ViewBag.Title = "Home";
}
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
<link rel="stylesheet" href="~/assets/Carousel.css" />

<body>

    <!-- Begin Slider Area -->
    <div class="text-center">
        <h1 class="display-4">Welcome</h1>
        <h3 style="text-align:center">Welcome to my landscape garden website.</h3>
        <br />
        <h3 style="text-align:center">Talk:</h3>
        <div id="myCarousel" class="carousel slide" data-ride="carousel">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
            </ol>

            <!-- Wrapper for slides -->
            <div class="carousel-inner">

                <div class="item active">
                    <img src="~/assets/customer/images/Img/IMG20220805162434.jpg" alt="Los Angeles" style="width:100%; height:50%;">
                    <div class="carousel-caption">
                        <h3>Jungal</h3>
                        <p>You can create them!</p>
                    </div>
                </div>

                <div class="item">
                    <img src="~/assets/customer/images/Img/IMG20211015145240.jpg" alt="Chicago" style="width:100%; height:50%;">
                    <div class="carousel-caption">
                        <h3>Garden</h3>
                        <p>You can add them!</p>
                    </div>
                </div>

                <div class="item">
                    <img src="~/assets/customer/images/Img/IMG20220426171620.jpg" alt="New York" style="width:100%; height:50%;">
                    <div class="carousel-caption">
                        <h3>Here</h3>
                        <p>You can buy on here for add them!</p>
                    </div>
                </div>

            </div>

            <!-- Left and right controls -->
            <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"> { </span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"> } </span>
                <span class="sr-only">Next</span>
            </a>
        </div>
        <!-- Slider Area End Here -->
        <script>

        </script>
        <!-- Begin Category Area -->

        <div class="product-area mt-5">
            <div class="container">
                <div class="section-title-wrap">
                    <h2 class="section-title mb-0">New categogy</h2>
                </div>
                <br />
                <div class="row">
                    <div class="col-lg-12">
                        @{ Html.RenderAction("CategoryList", "Home");}
                    </div>
                </div>
            </div>
        </div>
        <!-- Product Category End Here -->
        <br />
        <!-- Begin Product Area -->
        <div class="product-area">
            <div class="container">
                <div class="section-title-wrap">
                    <h2 class="section-title mb-0">New Products</h2>
                </div>
                <br />
                <div class="row">
                    <div class="col-lg-12 mb-4">
                        <div id="dataContainer">
                            @{ Html.RenderAction("ProductList", "Home");}
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Product Area End Here -->
        @section scripts{
            <script type="text/javascript">
                $('.add-to-cart').on('click', function (e) {
                    e.preventDefault();
                    // Call action to add product to cart
                    $.ajax({
                        url: $(this).attr('href'),
                        type: 'GET'
                    }).done(function () {
                        // Refresh mini cart
                        getMiniCart();
                        toastr.options.positionClass = 'toast-bottom-right';
                        toastr["success"]("Add succeeded!");
                    });
                });
            </script>
        }
    </div>
</body>
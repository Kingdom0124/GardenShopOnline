@model GardenShopOnline.Models.ResetPasswordViewModel
@{
    ViewBag.Title = "Reset password";
}

<main class="main-content">
    <div class="login-register-area section-space-y-axis-100" data-bg-image="../../assets/customer/images/background/img_background_tree.jpg">
        <div class="container">
            <div class="row justify-content-md-center">
                <div class="col-lg-8">
                    @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                    <div class="login-form">
                        <h4 class="login-title">@ViewBag.Title</h4>
                        @Html.ValidationSummary("", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.Code)                            
                    <div class="row">
                        <div class="col-lg-12">
                            <label>Email*</label>
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Enter email..." })
                        </div>
                        <div class="col-lg-12">
                            <label class="mt-1">Password*</label>
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control",  @placeholder = "Enter password..." })
                        </div>
                        <div class="col-lg-12">
                            <label class="mt-1">
                                Confirm password*
                            </label>
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @placeholder = "Enter confirm password..." })
                        </div>

                      
                        <div class="col-lg-12 pt-3">
                            <button type="submit" class="btn btn-custom-size lg-size btn-pronia-primary">Reset</button>
                        </div>
                    </div>
                    </div>
                    }
                </div>
            </div>
        </div>
    </div>
</main>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

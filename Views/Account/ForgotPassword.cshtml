@model GardenShopOnline.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "Forgot your password?";
}

<main class="main-content">
    <div class="login-register-area section-space-y-axis-100" data-bg-image="../../assets/customer/images/background/img_background_tree.jpg">
        <div class="container">
            <div class="row justify-content-md-center">
                <div class="col-lg-8">
                    @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                    <div class="login-form">
                        <h4 class="login-title">@ViewBag.Title</h4>
                        @Html.ValidationSummary("", new { @class = "text-danger" })
                        <div class="row">
                            <div class="col-lg-12">
                                <label>Email Address*</label>
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Enter your email..." })

                            </div>
                            
                            <div class="col-lg-12 pt-3">
                                <button type="submit" class="btn btn-custom-size lg-size btn-pronia-primary">Email Link</button>
                            </div>
                        </div>
                    </div>

                    }
                </div>
            </div>
        </div>
    </div>
</main>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
